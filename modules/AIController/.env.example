# Server Configuration
PORT=3035
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ai_controller

# Module URLs
INTENT_INTERPRETER_URL=http://localhost:3032
CHARACTER_CONTROLLER_URL=http://localhost:3031
SCENE_CONTROLLER_URL=http://localhost:3033
ITEM_CONTROLLER_URL=http://localhost:3034
STORYTELLER_URL=http://localhost:3037

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Optional: Rate Limiting
MAX_EXECUTIONS_PER_MINUTE=60

# Optional: Caching
ENABLE_RESPONSE_CACHE=false
CACHE_TTL_SECONDS=300

# AI Agent Configuration
# Use EITHER OpenRouter OR OpenAI API key (OpenRouter supports multiple models)
# OpenRouter (recommended - supports Claude, GPT-4, and more)
OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_AGENT_MODEL=anthropic/claude-3.5-sonnet

# Or use OpenAI directly
# OPENAI_API_KEY=your_openai_api_key_here
# AI_AGENT_MODEL=gpt-4-turbo-preview
